# =============================================================================
# Dynamic Taxonomy RAG v1.8.1 - Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure for your environment
# NEVER commit .env files with real secrets to version control
# =============================================================================

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment: development | testing | staging | production
DT_RAG_ENV=development
DEBUG=true
TEST_MODE=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (for development/testing)
DATABASE_URL=sqlite+aiosqlite:///./dt_rag.db

# PostgreSQL (for staging/production)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=dt_rag
# POSTGRES_USER=dt_rag_user
# POSTGRES_PASSWORD=your_secure_password_here
# DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-super-secret-jwt-key-min-32-chars

# JWT Settings
JWT_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# API Key Configuration
API_KEY_HEADER=X-API-Key
API_KEY_PREFIX=dtrag_

# =============================================================================
# LLM & AI SERVICES CONFIGURATION
# =============================================================================
# LLM Service Mode: dummy | openai | anthropic | azure
LLM_SERVICE_MODE=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_SERVICE_MODE=openai

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_CREDENTIALS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true